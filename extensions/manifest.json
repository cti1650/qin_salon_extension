{
  "manifest_version": 3,
  "name": "Qin Salon Extension",
  "version": "0.0.2",
  "description": "Qin Salonをより便利にするための拡張機能です",
  "action": {
    "default_title": "Qin Salon Extension"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://qin.salon/*"
  ]
}